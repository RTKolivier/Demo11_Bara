<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Barashikhina_Sofia.MainWindow"
        Title="Barashikhina_Sofia"
        SizeToContent="WidthAndHeight">
    
    <DockPanel>
		<StackPanel
        Margin="100"
        Background="#f1f2fe">
            <StackPanel>
				 <Border Margin="100,30,100,10" CornerRadius="10" Background="#dfe1fc"
                     Width="200">
        <TextBlock Margin="5"
            HorizontalAlignment="Center"
            FontSize="24"
            Text="Авторизация" />
    </Border>
            <Grid
            ColumnDefinitions="300,300">
                <TextBlock Grid.Column="0"
                            HorizontalAlignment="Right"
                             FontSize="20">
					Название организации: </TextBlock>
			<TextBox
            HorizontalAlignment="Left"
            Grid.Column="1"
            Name="Name"
            Width="200"></TextBox>
                </Grid>
            </StackPanel>
            <StackPanel>
				 <Border Margin="100,10,100,10" CornerRadius="10" Background="#dfe1fc"
                     Width="400">
    </Border>
            <Grid
            ColumnDefinitions="300,300">
                <TextBlock Grid.Column="0"
                            HorizontalAlignment="Right"
                             FontSize="20">
					Инн:  </TextBlock>
			<TextBox
            HorizontalAlignment="Left"
            Grid.Column="1"
            Name="inn"
            Width="200"></TextBox>
                </Grid>
            </StackPanel>
            <Button
            Background="#dfe1fc"
            Click="Next_Onclick" 
            Name="Next"
            Width="200"
            Height="40"
            HorizontalAlignment="Center"
            Margin="10,10" 
            FontSize="20">
			Далее:
            </Button>
        </StackPanel>
    </DockPanel>
</Window>
